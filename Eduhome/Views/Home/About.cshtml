@model HomeViewModel
@{
    ViewData["Title"] = "About";
    Setting setting = Model.Setting;
}


    <!-- Banner Area Start -->
    <div class="banner-area-wrapper">
        <div class="banner-area text-center">
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        <div class="banner-content-wrapper">
                            <div class="banner-content">
                                <h2>about us</h2>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Banner Area End -->
    <!-- About Start -->
    <div class="about-area pt-145 pb-155">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <div class="about-content">
                        <h2>@setting.AboutTitle <span>@setting.AboutSubtitle</span></h2>
                        <p>@setting.Desc1</p>
                        <p class="hidden-sm">@setting.Desc2</p>
                        <a class="default-btn">@setting.AboutBtn</a>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="about-img">
                        <img src="~/assets/img/about/@setting.AboutImg" alt="about">
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- About End -->
    <!-- Teacher Start -->
    <div class="teacher-area pb-150">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="section-title text-center">
                        <img src="~/assets/img/icon/section.png" alt="title">
                        <h2>meet our teachers</h2>
                    </div>
                </div>
            </div>
            <div class="row">
                @foreach (var item in Model.Teachers.Take(4))
                {
                    <div class="col-lg-3 col-sm-6">
                        <div class="single-teacher">
                            <div class="single-teacher-img">
                                <a asp-action="detail" asp-controller="teacher" asp-route-id="@item.Id"><img src="~/assets/img/teacher/@item.Img" alt="teacher"></a>
                            </div>
                            <div class="single-teacher-content text-center">
                            <h2><a asp-action="detail" asp-controller="teacher" asp-route-id="@item.Id">@item.Name</a></h2>
                                <h4>@item.Position</h4>
                                <ul>
                                    <li><a href="https://www.facebook.com/devitems/?ref=bookmarks"><i class="zmdi zmdi-facebook"></i></a></li>
                                    <li><a href="https://www.pinterest.com/devitemsllc/"><i class="zmdi zmdi-pinterest"></i></a></li>
                                    <li><a href="#"><i class="zmdi zmdi-vimeo"></i></a></li>
                                    <li><a href="https://twitter.com/devitemsllc"><i class="zmdi zmdi-twitter"></i></a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                }            
            </div>
        </div>
    </div>
    <!-- Teacher End -->
    <!-- Testimonial Area Start -->
    <div class="testimonial-area pt-110 pb-105 text-center">
        <div class="container">
            <div class="row">
                <div class="testimonial-owl owl-theme owl-carousel">
                    <div class="col-lg-8 offset-lg-2">
                        <div class="single-testimonial">
                            <div class="testimonial-info">
                                <div class="testimonial-img">
                                    <img src="~/assets/img/testimonial/@setting.TestImg" alt="testimonial">
                                </div>
                                <div class="testimonial-content">
                                    <p>@setting.TestTitle</p>
                                    <h4>@setting.TestName</h4>
                                    <h5>@setting.TestPosition</h5>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Testimonial Area End -->
    <!-- Notice Start -->
    <section class="notice-area two pt-140 pb-100">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <div class="notice-right-wrapper mb-25 pb-25">
                        <h3>TAKE A VIDEO TOUR</h3>
                        <div class="notice-video">
                            <div class="video-icon video-hover">
                                <a class="video-popup" href="@setting.AboutVideoLink">
                                    <i class="zmdi zmdi-play"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="notice-left-wrapper">
                        <h3>notice board</h3>
                        <div class="notice-left">
                            @foreach (var item in Model.NoticeBoards)
                            {
                                <div class="single-notice-left pb-70">
                                    <h4>@item.Title</h4>
                                    <p>@item.Subtitle</p>
                                </div>
                            }                        
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Notice End -->
