@model Slider
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Manage/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <h1>Create</h1>
    <form method="post" enctype="multipart/form-data">
        <div class="row">
            <div class="mb-3 col-lg-6">
                <label asp-for="TitleFirst" class="form-label">Title First</label>
                <input asp-for="TitleFirst" class="form-control" aria-describedby="Enter first title" placeholder="Enter firsttitle">
                <span asp-validation-for="TitleFirst" class="text-danger"></span>
            </div>
            <div class="mb-3 col-lg-6">
                <label asp-for="TitleSecond" class="form-label">Title Second</label>
                <input asp-for="TitleSecond" class="form-control" aria-describedby="Title Second" placeholder="Enter secondtitle">
                <span asp-validation-for="TitleSecond" class="text-danger"></span>
            </div>
            <div class="mb-3 col-lg-12">
                <label asp-for="Subtitle" class="form-label">Subtitle</label>
                <input asp-for="Subtitle" class="form-control" aria-describedby="Subtitle" placeholder="Enter subtitle">
                <span asp-validation-for="Subtitle" class="text-danger"></span>
            </div>
            <div class="mb-3 col-lg-12">
                <label asp-for="@Model.ImgFile">Image</label>
                <input asp-for="ImgFile" />
                <span class="text-danger" asp-validation-for="ImgFile"></span>
            </div>
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>

